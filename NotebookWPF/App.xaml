<Application x:Class="NotebookWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NotebookWPF"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--- Mahapps Resources -->
                <ResourceDictionary Source="Resources/Dictionaries/MetroResourceDictionary.xaml"/>
                <!--- App Resources -->
                <ResourceDictionary Source="Resources/Dictionaries/ComponentsResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
