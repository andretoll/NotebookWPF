<UserControl x:Class="NotebookWPF.View.UserControls.NotesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:NotebookWPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--- ListBoxItem Wrapper-->
    <DockPanel Width="200"
               Margin="5 5 0 0"
               Tag="{Binding 
                        RelativeSource={RelativeSource 
                        Mode=FindAncestor, 
                        AncestorType={x:Type ListBox}}, 
                        Path=DataContext}"
               Background="Transparent">

        <!--- ListBoxItem menu -->
        <DockPanel.ContextMenu>
            <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">

                <MenuItem Header="{Binding SelectedNote.IsFavorite, Converter={StaticResource booleanToStringConverter}}"
                          IsCheckable="True"
                          IsChecked="{Binding SelectedNoteIsFavorite}">
                    <MenuItem.Icon>
                        <Rectangle Width="22" 
                                   Height="22"
                                   Margin="10 0 0 0"
                                   Visibility="{Binding SelectedNote.IsFavorite, Converter={StaticResource booleanToVisibilityConverter}}">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="Gold"/>
                            </Rectangle.Fill>
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{DynamicResource appbar_star}"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Move to" 
                          ItemsSource="{Binding AvailableNotebooks}">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource MetroMenuItem}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AvailableNotebooks.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"
                                       Padding="5"/>
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="Command" Value="{Binding PlacementTarget.Tag.MoveNoteCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <Setter Property="CommandParameter" Value="{Binding Id}"/>
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                
                <MenuItem Header="Delete"
                          Click="DeleteNoteButton_Click"/>

            </ContextMenu>
        </DockPanel.ContextMenu>

        <!--- Notebook Information and Actions -->
        <DockPanel ToolTip="{Binding Title}"
                   DockPanel.Dock="Top">

            <!--- Information -->
            <StackPanel Orientation="Vertical"
                        DockPanel.Dock="Left">

                <!--- Title -->
                <StackPanel Height="30"
                            Orientation="Horizontal">
                    
                    <!--- Favorite Icon -->
                    <Rectangle Width="15"
                               Height="15"
                               Fill="Gold"
                               Visibility="{Binding IsFavorite, Converter={StaticResource booleanToVisibilityConverter}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Visual="{DynamicResource appbar_star}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    
                    <!--- Name Container -->
                    <StackPanel Orientation="Horizontal"
                                MaxWidth="120">
                        <TextBlock Text="{Binding Title, Mode=TwoWay}"
                               Margin="5 5 0 0"
                                   MaxWidth="120"
                               TextTrimming="CharacterEllipsis"
                               Style="{StaticResource LargeText}"
                               Visibility="{Binding 
                                RelativeSource={RelativeSource 
                                Mode=FindAncestor, 
                                AncestorType={x:Type ListBox}}, 
                                Path=DataContext.NoteIsEditing, 
                                Converter={StaticResource reversedBooleanToVisibilityConverter}, 
                                Mode=TwoWay}"/>

                        <TextBox Text="{Binding Title, Mode=TwoWay}"
                                 Height="30"
                                 MaxWidth="120"
                                 FontSize="15"
                                 Visibility="{Binding 
                                RelativeSource={RelativeSource 
                                Mode=FindAncestor, 
                                AncestorType={x:Type ListBox}}, 
                                Path=DataContext.NoteIsEditing, 
                                Converter={StaticResource booleanToVisibilityConverter}, 
                                Mode=TwoWay}">
                            <!--- If TextBox loses focus, save Notebook edit -->
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="LostFocus">
                                    <b:InvokeCommandAction Command="{Binding 
                                                        RelativeSource={RelativeSource 
                                                        Mode=FindAncestor, 
                                                        AncestorType={x:Type ListBox}}, 
                                                        Path=DataContext.StopNoteEditingCommand}"
                                                        CommandParameter="{Binding}"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </TextBox>
                    </StackPanel>                    
                </StackPanel>

                <!--- Other information -->
                <StackPanel>
                    <!--<TextBlock Text="{Binding Created, StringFormat={}Created: {0:yyyy/MM/dd}}"
                               Style="{StaticResource TinyText}"
                               Margin="5 5 0 0"/>-->
                    <TextBlock Text="{Binding Updated, StringFormat={}Edited: {0:MM/dd HH:mm}}"
                               Style="{StaticResource TinyText}"
                               Margin="5 0 0 0"/>
                </StackPanel>

            </StackPanel>

            <!--- Buttons -->
            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="15">

                <!--- Toggle delete button -->
                <Button x:Name="DeleteNoteButton"
                        ToolTip="Delete"
                        Width="30"                        
                        Height="30"
                        BorderThickness="1"
                        Click="DeleteNoteButton_Click">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SquareButtonStyle}" TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=IsMouseOver}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <!--- Draw Icon -->
                        <Rectangle Width="15"
                                   Height="15"
                                   Fill="{Binding 
                                            Path=Foreground, 
                                            RelativeSource={RelativeSource 
                                            FindAncestor, 
                                            AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_delete}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button>

            </StackPanel>

        </DockPanel>

        <!--- Delete Panel -->
        <StackPanel x:Name="ConfirmDeletePanel"
                    DockPanel.Dock="Bottom"
                    Style="{StaticResource VisibleAnimation}"
                    Visibility="Collapsed"
                    Margin="0 0 0 5"
                    HorizontalAlignment="Center">

            <!--- Confirmation Message -->
            <TextBlock Text="Are you sure?"
                       HorizontalAlignment="Center"
                       Style="{StaticResource SmallText}"/>

            <!--- Button Container -->
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 5">

                <!--- Confirm Delete Button -->
                <Button ToolTip="Delete"
                        Style="{StaticResource WarningButton}"
                        Background="Red"
                        Width="75"
                        Margin="0 0 5 0"
                        Command="{Binding 
                                    RelativeSource={RelativeSource 
                                    Mode=FindAncestor, 
                                    AncestorType={x:Type ListBox}}, 
                                    Path=DataContext.DeleteNoteCommand}"
                        CommandParameter="{Binding Id}"
                        Grid.Column="2">
                    <TextBlock Text="Delete"/>
                </Button>

                <!--- Cancel Button-->
                <Button ToolTip="Cancel"
                        Style="{StaticResource SquareButtonStyle}"
                        x:Name="CancelDeleteNoteButton"
                        Click="CancelDeleteNoteButton_Click"
                        Width="75">
                    <TextBlock Text="Cancel"/>
                </Button>

            </StackPanel>
        </StackPanel>

    </DockPanel>

</UserControl>
